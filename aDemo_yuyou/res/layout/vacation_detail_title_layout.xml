<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="166dp" >

    <ImageView
        android:id="@id/iv_vacation_detail_header_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/ic_detail_zhutu" />

    <!-- <View -->
    <!-- android:layout_width="fill_parent" -->
    <!-- android:layout_height="fill_parent" -->
    <!-- android:background="@drawable/bg_designation_common" /> -->

    <TextView
        android:id="@id/tv_vacation_title_depart_city"
        style="@style/tv_hint_white_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:drawableLeft="@drawable/icon_details_starting"
        android:drawablePadding="4.0dip"
        android:paddingBottom="8.0dip"
        android:paddingLeft="11.0dip"
        android:text="深圳出发" />

    <TextView
        android:id="@id/tv_vacation_title_comment_degree"
        style="@style/tv_hint_white_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/tv_vacation_title_product_no"
        android:layout_toRightOf="@id/tv_vacation_title_depart_city"
        android:gravity="center_horizontal"
        android:paddingBottom="8.0dip"
        android:text="新品上线" />

    <TextView
        android:id="@id/tv_vacation_title_product_no"
        style="@style/tv_hint_white_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="8.0dip"
        android:paddingRight="11.0dip"
        android:text="自由行编号：248066" />

</RelativeLayout>