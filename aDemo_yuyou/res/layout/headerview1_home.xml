<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f4f7" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/pager_home_top"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" >
                </android.support.v4.view.ViewPager>

                <com.example.sample.library.HomeViewPagerIndicator
                    android:id="@+id/viewPagerIndicator1"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-22dp" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/pager_home_second"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:visibility="visible" >
                </android.support.v4.view.ViewPager>

                <com.example.sample.library.HomeViewPagerIndicator2
                    android:id="@+id/viewPagerIndicator_second"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="#f2f4f7"
                    android:orientation="horizontal"
                    android:padding="2dp"
                    android:visibility="visible" >

                    <RelativeLayout
                        android:id="@+id/layout_home_haiwaiwanle"
                        android:layout_width="118dp"
                        android:layout_height="50dp"
                        android:background="#ffffff" >

                        <ImageView
                            android:id="@+id/img_home_haiwaiwanle"
                            android:layout_width="36dp"
                            android:layout_height="50dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:src="@drawable/ic_home_haiwaiwanle" />

                        <TextView
                            android:id="@+id/tv_home_haiwaiwanle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="16dp"
                            android:text="海外游乐"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_home_qianzheng"
                        android:layout_width="118dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="2dp"
                        android:background="#ffffff" >

                        <ImageView
                            android:id="@+id/img_home_qianzheng"
                            android:layout_width="36dp"
                            android:layout_height="50dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:src="@drawable/ic_home_qianzheng" />

                        <TextView
                            android:id="@+id/tv_home_qianzheng"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="28dp"
                            android:text="签证"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_home_allworld_wifi"
                        android:layout_width="118dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="2dp"
                        android:background="#ffffff" >

                        <ImageView
                            android:id="@+id/img_home_allworld_wifi"
                            android:layout_width="36dp"
                            android:layout_height="50dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:src="@drawable/ic_home_allworld_wifi" />

                        <TextView
                            android:id="@+id/tv_home_allworld_wifi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@+id/img_home_allworld_wifi"
                            android:text="全球WIFI"
                            android:textSize="13sp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="#f2f4f7"
                    android:orientation="horizontal"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:visibility="visible" >

                    <RelativeLayout
                        android:id="@+id/layout_home_movie_ticket"
                        android:layout_width="118dp"
                        android:layout_height="50dp"
                        android:background="#ffffff" >

                        <ImageView
                            android:id="@+id/img_home_movie_ticket"
                            android:layout_width="36dp"
                            android:layout_height="50dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:src="@drawable/ic_home_movie" />

                        <TextView
                            android:id="@+id/tv_home_movie_ticket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@+id/img_home_movie_ticket"
                            android:text="电影票"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_home_licai"
                        android:layout_width="118dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="2dp"
                        android:background="#ffffff" >

                        <ImageView
                            android:id="@+id/img_home_licai"
                            android:layout_width="36dp"
                            android:layout_height="50dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:src="@drawable/ic_home_licai" />

                        <TextView
                            android:id="@+id/tv_home_licai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="28dp"
                            android:text="理财"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_home_car_ticket"
                        android:layout_width="118dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="2dp"
                        android:background="#ffffff" >

                        <ImageView
                            android:id="@+id/img_home_car_ticket"
                            android:layout_width="36dp"
                            android:layout_height="50dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:src="@drawable/ic_home_car_ticket" />

                        <TextView
                            android:id="@+id/tv_home_car_ticket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@+id/img_home_car_ticket"
                            android:text="汽车票"
                            android:textSize="13sp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f2f4f7"
                    android:orientation="vertical"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:visibility="gone" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:background="#ffdd56" >

                        <TextView
                            android:id="@+id/tv_home_heard_login_surprise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:text="登陆有礼"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#723504"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_home_heard_more_exclusive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="12dp"
                            android:drawablePadding="6dp"
                            android:drawableRight="@drawable/arrow_home_common_right"
                            android:text="更多专享"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#ff7a34"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/img_home_heard_login_surprise"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:background="#ffe477"
                        android:src="@drawable/ic_launcher" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/layout_home_xianshi_qianggou"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginTop="12dp"
                    android:background="#ffffff"
                    android:padding="12dp"
                    android:visibility="visible" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/ic_home_qianggou_shizhong" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imageView1"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/imageView1"
                        android:text="限时抢购"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textView1"
                        android:layout_toLeftOf="@+id/cv_countdownViewTest2"
                        android:layout_marginRight="6dp"
                        android:text="距离结束"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <cn.iwgang.countdownview.CountdownView
                        android:id="@+id/cv_countdownViewTest2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textView2"
                        android:layout_alignParentRight="true"
                        app:isHideTimeBackground="false"
                        app:isShowDay="false"
                        app:isShowHour="true"
                        app:isShowMillisecond="false"
                        app:isShowMinute="true"
                        app:isShowSecond="true"
                        app:isShowTimeBgDivisionLine="false"
                        app:suffixGravity="center"
                        app:suffixTextColor="#000000"
                        app:suffixTextSize="20sp"
                        app:timeBgColor="#444444"
                        app:timeTextColor="#FFFFFF"
                        app:timeTextSize="20sp" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/ic_home_qianggou_title_logo" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/imageView2"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@+id/imageView2"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:maxLines="2"
                        android:minLines="2"
                        android:text="【广州直飞】曼谷＋芭提雅4晚6日游，一价全含无自费"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView4"
                        android:layout_below="@+id/textView4"
                        android:layout_marginTop="4dp"
                        android:text="￥"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#ff6815"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView5"
                        android:layout_alignBottom="@+id/textView5"
                        android:layout_toRightOf="@+id/textView5"
                        android:text="1999"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#ff6815"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView6"
                        android:layout_alignBottom="@+id/textView6"
                        android:layout_toRightOf="@+id/textView6"
                        android:text="起"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#c0c0c0"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imageView2"
                        android:layout_alignLeft="@+id/textView5"
                        android:text="仅限"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#c0c0c0"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView8"
                        android:layout_alignBottom="@+id/textView8"
                        android:layout_toRightOf="@+id/textView8"
                        android:text="80"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ff6815"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textView9"
                        android:layout_toRightOf="@+id/textView9"
                        android:text="份"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#c0c0c0"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView10"
                        android:layout_alignBottom="@+id/textView10"
                        android:layout_alignRight="@+id/textView4"
                        android:drawablePadding="6dp"
                        android:drawableRight="@drawable/arrow_list_common_right"
                        android:text="更多抢购"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

</RelativeLayout>