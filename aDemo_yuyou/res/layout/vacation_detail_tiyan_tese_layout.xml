<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_twoline_common"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@id/rl_vacation_detail_comment_container"
        android:layout_width="fill_parent"
        android:layout_height="100.0dip"
        android:background="@drawable/selector_white_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@id/tv_vacation_detail_comment_title"
            style="@style/tv_list_primary_style"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:drawableLeft="@drawable/icon_details_thumb"
            android:drawablePadding="11.0dip"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/common_margin"
            android:paddingRight="@dimen/common_margin"
            android:text="@string/vacation_detail_tiyantese_title" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_vacation_detail_comment_title"
            android:layout_marginLeft="17dp"
            android:minLines="1"
            android:maxLines="2"
            android:textColor="@color/detail_vacation_tiyan_tese"
            android:text="@string/vacation_detail_tiyantese_subtitle" />

    </RelativeLayout>

    <LinearLayout
        android:id="@id/ll_vacation_comment_score"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_downline_common"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/common_margin"
        android:paddingLeft="6.0dip"
        android:paddingRight="6.0dip"
        android:paddingTop="10.0dip"
        android:visibility="gone"
        android:weightSum="4.0" />

    <ListView
        android:id="@id/slv_vacation_comment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:orientation="vertical"
        android:visibility="gone" />

</LinearLayout>