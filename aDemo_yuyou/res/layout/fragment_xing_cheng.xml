<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sample.fragment.XingChengFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#00000000"
            android:scrollbars="none" >
        </ListView>
    </LinearLayout>

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center|bottom|right" >

        <com.gc.materialdesign.views.ButtonFloat
            android:id="@+id/buttonFloat_xingcheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom|right"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="24dp"
            materialdesign:animate="true"
            materialdesign:iconDrawable="@drawable/btn_action_assistant_list_rest" >
        </com.gc.materialdesign.views.ButtonFloat>

    </FrameLayout>

</FrameLayout>