<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_actionbar"
        android:layout_width="fill_parent"
        android:layout_height="52.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
         >

        <ImageButton
            android:id="@+id/detail_tb_img_back"
            android:layout_width="52.0dip"
            android:layout_height="52.0dip"
            android:scaleType="center"
            android:background="#00000000"
            android:src="@drawable/icon_navi_detail_back" />

        <TextView
            android:id="@+id/detail_tb_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="出境游线路"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/detail_tb_img_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:src="@drawable/icon_navi_detail_share" />

        <ImageView
            android:id="@+id/detail_tb_img_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginRight="12dp"
            android:src="@drawable/icon_navi_home_whitemore" />

    </LinearLayout>

</LinearLayout>