<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_twoline_common"
    android:layout_marginTop="10dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@id/rl_vacation_detail_comment_container"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:background="@drawable/selector_white_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@id/tv_vacation_detail_comment_title"
            style="@style/tv_list_primary_style"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/icon_details_comment"
            android:drawablePadding="11.0dip"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/common_margin"
            android:paddingRight="@dimen/common_margin"
            android:text="@string/vacation_detail_comment_title" />

        <TextView
            android:id="@id/tv_vacation_detail_comment"
            style="@style/tv_info_hint_style"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_vacation_detail_comment_title"
            android:drawablePadding="11.0dip"
            android:drawableRight="@drawable/arrow_list_common"
            android:ellipsize="end"
            android:gravity="center|right"
            android:paddingLeft="@dimen/common_margin"
            android:paddingRight="@dimen/common_margin"
            android:singleLine="true"
            android:text="@string/vacation_detail_comment_none" />
    </RelativeLayout>

    <LinearLayout
        android:id="@id/ll_vacation_comment_score"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_downline_common"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/common_margin"
        android:paddingLeft="6.0dip"
        android:paddingRight="6.0dip"
        android:paddingTop="10.0dip"
        android:visibility="gone"
        android:weightSum="4.0" />

    <ListView
        android:id="@id/slv_vacation_comment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:orientation="vertical"
        android:visibility="gone" />

</LinearLayout>