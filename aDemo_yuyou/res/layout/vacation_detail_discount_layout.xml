<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="44.0dip"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/vacation_discount_bg"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin" >

        <FrameLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" >

            <LinearLayout
                android:id="@id/ll_vacation_detail_discount_horizontal_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12.0dip"
                android:layout_marginTop="12.0dip"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@id/ll_vacation_detail_discount_vertical_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6.0dip"
                android:layout_marginTop="12.0dip"
                android:orientation="vertical" />
        </FrameLayout>

<!--         <com.tongcheng.lib.serv.module.image.photoup.photopick.view.CheckableImageView -->
        <ImageView
            android:id="@id/iv_vacation_detail_discount_controller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right|top"
            android:layout_marginLeft="11.0dip"
            android:layout_marginTop="15.0dip"
            android:src="@drawable/arrow_list_common_down" />
    </LinearLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        layout="@layout/horizontal_divider_view" />

</LinearLayout>