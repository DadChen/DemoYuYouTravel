<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
     <android.support.v4.view.ViewPager
      	android:id="@+id/pager2"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

<com.example.sample.library.FindViewPagerindicator
    android:id="@+id/viewPagerindicator1"
    android:layout_width="match_parent"
    android:layout_height="18dp"
    android:layout_alignBottom="@+id/pager2"
    android:layout_alignParentLeft="true" />

<RelativeLayout
    android:id="@+id/layout_find_search_xiamen"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/pager2"
    android:background="#FFFFFF"
    android:paddingLeft="10dp" >

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/arrow_calendar_right_assistant" />

    <TextView
        android:id="@+id/modu_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/mudul_icon"
        android:text="查看厦门攻略"
        android:layout_marginLeft="4dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/mudul_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_zhinan" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageView7"
        android:layout_marginRight="12dp"
        android:text="了解必吃，必玩，必买" 
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignParentBottom="true"
        android:background="#c0c0c0"
        android:text="" />

</RelativeLayout>

</RelativeLayout>
